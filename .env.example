# Backend Configuration (.env file in root directory)

# Database Connection
DATABASE_URL=postgresql://localhost/parent_child_games

# JWT Secret (change this to something random and secure!)
JWT_SECRET=change-this-to-a-random-secret-key

# Server Port
PORT=5000

# Environment
NODE_ENV=development


# ==========================================
# Frontend Configuration (create .env in src folder)
# ==========================================

# Backend API URL
# For local development:
REACT_APP_API_URL=http://localhost:5000

# For mobile testing (replace with your computer's IP):
# REACT_APP_API_URL=http://192.168.1.100:5000

# For production (replace with your deployed backend URL):
# REACT_APP_API_URL=https://your-backend.herokuapp.com
